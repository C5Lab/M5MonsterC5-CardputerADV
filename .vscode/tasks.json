{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ADV",
      "type": "shell",
      "command": "idf.py",
      "args": ["-B", "build-adv", "-DBOARD=adv", "build"],
      "options": { "cwd": "${workspaceFolder}" },
      "windows": {
        "command": "powershell",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-Command",
          "& \"${config:idf.espIdfPath}\\\\export.ps1\"; idf.py -B build-adv -DBOARD=adv build"
        ]
      },
      "linux": {
        "command": "bash",
        "args": [
          "-lc",
          "source \"${config:idf.espIdfPath}/export.sh\" >/dev/null 2>&1; idf.py -B build-adv -DBOARD=adv build"
        ]
      },
      "osx": {
        "command": "bash",
        "args": [
          "-lc",
          "source \"${config:idf.espIdfPath}/export.sh\" >/dev/null 2>&1; idf.py -B build-adv -DBOARD=adv build"
        ]
      },
      "group": "build",
      "problemMatcher": []
    },
